@using Nop.Plugin.BookPlugin.Models
@model BookModel

@using Newtonsoft.Json


<div class="card-body">

    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Name" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Author" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Author" />
            <span asp-validation-for="Author"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="PublishDate" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="PublishDate" />
            <span asp-validation-for="PublishDate"></span>
        </div>
    </div>
</div>

<nop-alert asp-alert-id="statesAlert" asp-alert-message="@T("Admin.Common.Alert.States.Failed")" />